---
import case1 from "../img/pictures/gallery1.png";
import case2 from "../img/pictures/gallery2.png";
import case3 from "../img/pictures/gallery3.png";
import case4 from "../img/pictures/gallery4.png";
import case5 from "../img/pictures/gallery5.png";
import case6 from "../img/pictures/gallery6.png";
import case7 from "../img/pictures/gallery7.png";
import { Image } from "astro:assets";
---

<section>
    <h2 class="header-p">Our Portfolio</h2>
    <div class="gallery">
        <a href="" class="case">
            <Image class="pic-a" src={case1} alt="case1" /></a
        >
        <a href="" class="case">
            <Image class="pic-a" src={case2} alt="case2" /></a
        >
        <a href="" class="case">
            <Image class="pic-a" src={case3} alt="case3" /></a
        >
        <a href="" class="case">
            <Image class="pic-a" src={case4} alt="case4" /></a
        >
        <a href="" class="case">
            <Image class="pic-a" src={case5} alt="case5" /></a
        >
        <a href="" class="case">
            <Image class="pic-a" src={case6} alt="case6" /></a
        >
        <a href="" class="case">
            <Image class="pic-a" src={case7} alt="case7" /></a
        >
    </div>
</section>
<style>
    section {
        display: flex;
        flex-direction: column;
    }
    .case {
        flex-basis: 50%;
        flex-shrink: 1;
        flex-grow: 1;
        aspect-ratio: 16/9;
    }
    .pic-a {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }
    .header-p {
        background-color: rgb(255, 105, 105);
        color: white;
        display: flex;
        justify-content: end;
        align-items: center;
        min-height: 120px;
    }
    .gallery {
        display: flex;
        flex-wrap: wrap;
        /* display: grid;
        grid-template-columns: repeat(2, 1fr); */
    }
</style>
