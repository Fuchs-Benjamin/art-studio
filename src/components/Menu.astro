<style>
    .root {
        background-color: #222;
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        gap: 30px;
        padding: 15px;
    }
    nav {
        display: flex;
        flex-direction: column;
        gap: 30px;
    }
    nav a:hover path.border {
        stroke: #fe6969;
    }
    nav a:hover path:not(.border) {
        fill: #fee39c;
    }
    nav path {
        transition: 0.3s ease-in-out;
        transition-property: stroke, fill;
    }
</style>
